{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "es2020",
        ],
        "removeComments": false,
        "target": "es2020",
        "declaration": true
    },
    "include": [
        "src/**/*",
    ]
}
